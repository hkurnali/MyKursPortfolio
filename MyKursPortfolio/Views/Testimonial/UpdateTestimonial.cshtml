@model MyKursPortfolio.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>

<form method="post">

    <label>Referans ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <label>Referans Ünvanı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <label>Referans Yorumu</label>
    @Html.TextAreaFor(x => x.Comment, 5,1, new { @class = "form-control" })
    <br/>
    <button class="btn btn-success">Kaydet</button>
</form>
